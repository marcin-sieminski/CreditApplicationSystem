@model CreditApplicationListViewModel;
@{
    ViewBag.Title = "List";
    Layout = "_Layout";
}
<h3>List of all active credit applications</h3>
<hr/>
<table class="table table-sm table-bordered table-hover table-striped">
    <tr class="thead-light">
        <th>Id</th><th>Customer</th><th>Amount requested</th><th>Date of submission</th><th>Employee</th><th>Status</th>
    </tr>

    @foreach (var creditApplication in Model.CreditApplications)
    {
        <tr>
            <td><a asp-controller="CreditApplication" asp-action="Details" asp-route-id="@creditApplication.Id">@creditApplication.Id</a></td>
            <td>@creditApplication.Customer.CustomerFirstName @creditApplication.Customer.CustomerLastName</td>
            <td>@creditApplication.AmountRequested</td>
            <td>@creditApplication.DateOfSubmission</td>
            <td>@creditApplication.Employee.FirstName @creditApplication.Employee.LastName</td>
            <td>@creditApplication.ApplicationStatus.ApplicationStatusName</td>
        </tr>
    }
</table>
